---
import Layout from '../layouts/Layout.astro';


const communities = [
  {
    name: 'Discord Group',
    description: 'Learn for free! Ask any question and learn to build websites. If your code is broken, I will help you fix it! Great for any business looking to grow and reach more people.',
    icon: 'discord',
    link: 'https://discord.gg/Gcvv7pdB',
    accent: 'from-[#5865F2] to-[#4752c4]',
    metric: 'Learn for Free',
    buttonText: 'Join Now'
  },
  {
    name: 'Helpful Videos',
    description: 'Free videos that show you how to get more customers and reach more people. Learn how to make cool AI videos and photos easily for your marketing.',
    icon: 'youtube',
    link: 'https://www.youtube.com/@GusDigitalSolutions',
    accent: 'from-[#FF0000] to-[#cc0000]',
    metric: 'New Videos',
    buttonText: 'Watch Now'
  },
  {
    name: 'Skool Group',
    description: 'Get my free Business Tool Kits. I give you ready-made store designs and easy plans to find customers and grow your business today.',
    icon: 'skool',
    link: 'https://www.skool.com/@gustavo-payano-2113?g=gus-digital-solutions-9553',
    accent: 'from-[#F59E0B] to-[#D97706]',
    metric: 'Get Access',
    buttonText: 'Join Now'
  },
  {
    name: 'Hire on Upwork',
    description: 'Need professional help? Hire me directly on Upwork for websites, Shopify stores, video content, and business automation projects.',
    icon: 'upwork',
    link: 'https://www.upwork.com/freelancers/~01ab121370915e40de',
    accent: 'from-[#14a800] to-[#0d7a00]',
    metric: 'Verified Pro',
    buttonText: 'View Profile'
  }
];
---

<Layout title="Free Business Resources | Gus Digital Solutions">
  <main class="relative h-auto bg-transparent overflow-hidden pb-20">
    <!-- NO LOCAL BACKGROUND - Using Global Layout Background -->

    <div class="w-full max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <!-- DEDICATED SPACER TO CLEAR FIXED NAVBAR -->
      <div class="h-24 md:h-32 lg:h-40"></div>
      
      <!-- HERO SECTION - PUSHED DOWN & ORDERED -->
      <header class="max-w-4xl mx-auto text-center mb-0 pt-32 md:pt-48 reveal">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-black text-white tracking-tighter uppercase leading-[0.9] mb-8">
          Free Business Resources
        </h1>

        <div class="inline-block px-4 py-1.5 rounded-full bg-primary-500/10 border border-primary-500/20 mb-8">
           <span class="text-[10px] font-black text-primary-400 uppercase tracking-[0.4em]">Zero Cost, Infinite Value</span>
        </div>

        <p class="text-dark-200 text-sm md:text-base lg:text-lg leading-relaxed max-w-2xl mx-auto font-medium mb-12">
          Join us to <span class="text-white">learn how to make your business run itself</span>. Learn about <span class="text-white">websites, programming, and how to get more customers</span>. Get <span class="text-primary-400">free business tool kits</span>.
        </p>
      </header>

      <!-- COMMUNITY CARDS GRID - ULTRA COMPACT -->
      <section class="grid lg:grid-cols-3 gap-6 md:gap-8 pb-0 mt-0">
        {communities.map((item, index) => (
          <a
            href={item.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex flex-col h-full"
            style={`transition-delay: ${index * 150}ms`}
          >
            <div class="relative flex flex-col h-full p-6 md:p-8 rounded-[2rem] bg-white/[0.03] border border-white/5 backdrop-blur-3xl hover:bg-white/[0.06] hover:border-primary-500/40 transition-all duration-700 overflow-hidden shadow-2xl">
              
              <!-- Ambient Glow -->
              <div class="absolute -top-16 -right-16 w-64 h-64 bg-primary-500/10 rounded-full blur-[100px] opacity-10 group-hover:opacity-30 transition-opacity duration-1000"></div>
              
              <!-- Top: Metric & Brand Icon -->
              <div class="flex items-start justify-between mb-4">
                <div class="relative">
                  <div class="w-10 h-10 rounded-xl bg-dark-950 border border-white/10 flex items-center justify-center text-white group-hover:scale-110 group-hover:rotate-6 transition-all duration-700 shadow-[0_15px_40px_rgba(0,0,0,0.5)] z-10 relative">
                    <div class={`absolute inset-0 bg-gradient-to-br ${item.accent} opacity-10 group-hover:opacity-20 transition-opacity`}></div>
                    {item.icon === 'discord' && <svg viewBox="0 0 24 24" class="w-5 h-5 relative z-20" fill="currentColor"><path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.078.078 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/></svg>}
                    {item.icon === 'youtube' && <svg viewBox="0 0 24 24" class="w-5 h-5 relative z-20" fill="currentColor"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>}
                    {item.icon === 'skool' && <svg viewBox="0 0 24 24" class="w-5 h-5 relative z-20" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>}
                    {item.icon === 'upwork' && <svg viewBox="0 0 24 24" class="w-5 h-5 relative z-20" fill="currentColor"><path d="M18.561 13.158c-1.102 0-2.135-.467-3.074-1.227l.228-1.076.008-.042c.207-1.143.849-3.06 2.839-3.06 1.492 0 2.703 1.212 2.703 2.703-.001 1.489-1.212 2.702-2.704 2.702zm0-8.14c-2.539 0-4.51 1.649-5.31 4.366-1.22-1.834-2.148-4.036-2.687-5.892H7.828v7.112c-.002 1.406-1.141 2.546-2.547 2.548-1.405-.002-2.543-1.143-2.545-2.548V3.492H0v7.112c0 2.914 2.37 5.303 5.281 5.303 2.913 0 5.283-2.389 5.283-5.303v-1.19c.529 1.107 1.182 2.229 1.974 3.221l-1.673 7.873h2.797l1.213-5.71c1.063.679 2.285 1.109 3.686 1.109 3 0 5.439-2.452 5.439-5.45 0-3-2.439-5.439-5.439-5.439z"/></svg>}
                  </div>
                </div>

                <div class="px-2 py-1 rounded-full bg-primary-500/10 border border-primary-500/20 backdrop-blur-md shadow-lg transform group-hover:-translate-y-1 transition-transform">
                  <span class="text-[8px] font-black text-primary-400 uppercase tracking-widest block italic leading-none">{item.metric}</span>
                </div>
              </div>

              <!-- Content Body -->
              <div class="space-y-1.5 flex-grow">
                <h3 class="text-lg md:text-xl font-black text-white tracking-tighter uppercase group-hover:text-primary-400 transition-colors duration-500 leading-none">
                  {item.name}
                </h3>
                <p class="text-dark-300 text-[10px] md:text-xs leading-relaxed opacity-50 group-hover:opacity-100 transition-opacity duration-500 max-w-[95%] font-medium">
                  {item.description}
                </p>
              </div>
              
              <!-- Footer: Action Indicator -->
              <div class="mt-3 flex items-center justify-between border-t border-white/5 pt-3 group/btn">
                <span class="text-[8px] font-black text-white uppercase tracking-[0.2em] opacity-40 group-hover:opacity-100 group-hover:text-primary-400 transition-all transform group-hover:translate-x-1 text-left line-clamp-1">
                  {item.buttonText}
                </span>
                <div class="w-6 h-6 rounded-full bg-dark-950 border border-white/10 flex items-center justify-center transition-all duration-500 group-hover:bg-primary-600 group-hover:border-primary-400 group-hover:scale-110 shadow-2xl shrink-0 ml-4">
                  <svg class="w-2.5 h-2.5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4">
                    <path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))}
      </section>
    </div>
  </main>
</Layout>
