---
import Layout from '../../layouts/Layout.astro';
import TrustBanner from '../../components/TrustBanner.astro';
import { ServiceFlipCard } from '../../components/FlipCard';
import CredibilityBadges from '../../components/CredibilityBadges';

const services = [
  {
    title: 'Business Websites',
    description: 'A professional website for your business. Show customers who you are, what you do, and how to contact you.',
    icon: 'monitor',
    gradient: 'from-blue-600/20 to-cyan-600/20',
    pricing: '$997',
    timeline: '3-7 days',
    features: ['Custom Design', 'Mobile Responsive', 'SEO Basic Setup', 'Contact Form', 'Hosting Setup']
  },
  {
    title: 'Shopify Stores',
    description: 'Complete online store setup. Product listings, payments, shipping, and design - ready to start selling.',
    icon: 'cart',
    gradient: 'from-purple-600/20 to-pink-600/20',
    pricing: '$1,497',
    timeline: '7-14 days',
    features: ['Theme Customization', 'Product Upload (up to 20)', 'Payment Gateway', 'Shipping Rules', 'App Integration']
  },
  {
    title: 'Sales Funnel Design',
    description: 'High-converting landing pages and sales funnels designed to turn visitors into paying customers.',
    icon: 'funnel',
    gradient: 'from-orange-600/20 to-red-600/20',
    pricing: '$797',
    timeline: '3-5 days',
    features: ['Landing Page Design', 'Copywriting Assistance', 'Email Integration', 'A/B Testing Setup', 'Conversion Optimization']
  }
];
---

<Layout title="Grow Your Business Online | Gus Digital Solutions">
  <main class="bg-dark-900 min-h-screen pt-20">
    
    <TrustBanner />

    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-16 md:py-24 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 text-xs font-bold uppercase tracking-wider mb-6">
        <span class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"></span>
        Accepting New Clients
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight">
        Turn Your Website Into A <br class="hidden md:block" />
        <span class="gradient-text-animate">24/7 Sales Machine</span>
      </h1>
      
      <p class="text-dark-300 text-lg md:text-xl max-w-2xl mx-auto mb-10 leading-relaxed">
        We build high-converting websites and automation systems for small businesses. 
        Get a professional digital presence without the headache.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
        <a href="https://calendly.com/gus-gusdigitalsolutions/30min" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-lg pulse-glow w-full sm:w-auto min-w-[240px] text-center flex items-center justify-center gap-2 py-4">
          <span>Book Your Free Strategy Call</span>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </a>
        <p class="text-dark-400 text-sm sm:hidden mt-2">No obligation. 100% Free Advice.</p>
      </div>

      <CredibilityBadges client:visible />
    </section>

    <!-- Services Linear Stack (Mobile Optimized) -->
    <section class="container mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold text-white text-center mb-12">Our Core Services</h2>
      
      <div class="max-w-4xl mx-auto space-y-8">
        {services.map(service => (
          <div class="h-[400px]"> <!-- Fixed height container for flip card -->
            <ServiceFlipCard client:visible {...service} />
          </div>
        ))}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="bg-dark-800/50 border-y border-dark-700/50 py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-white text-center mb-16">Why Business Owners Trust Us</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- 1 -->
          <div class="p-6 bg-dark-900 border border-dark-700 rounded-2xl">
            <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center text-2xl mb-4">‚ö°</div>
            <h3 class="text-xl font-bold text-white mb-2">1-Day Response Time</h3>
            <p class="text-dark-400">We communicate fast. You'll never be left wondering what's happening with your project.</p>
          </div>
          <!-- 2 -->
          <div class="p-6 bg-dark-900 border border-dark-700 rounded-2xl">
            <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center text-2xl mb-4">üåé</div>
            <h3 class="text-xl font-bold text-white mb-2">Bilingual Support</h3>
            <p class="text-dark-400">Fluent in English and Spanish. We can build bilingual sites to double your audience.</p>
          </div>
          <!-- 3 -->
          <div class="p-6 bg-dark-900 border border-dark-700 rounded-2xl">
            <div class="w-12 h-12 bg-green-500/10 rounded-xl flex items-center justify-center text-2xl mb-4">üõ°Ô∏è</div>
            <h3 class="text-xl font-bold text-white mb-2">100% Guaranteed</h3>
            <p class="text-dark-400">30-Day Money-Back Guarantee on all service fees. If you're not happy, you don't pay.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="container mx-auto px-4 py-24 text-center">
      <div class="max-w-3xl mx-auto bg-gradient-to-br from-primary-900/40 to-blue-900/40 border border-primary-500/30 rounded-3xl p-10 md:p-16 relative overflow-hidden">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Ready to Grow?</h2>
        <p class="text-dark-300 text-lg mb-10">
          Book your free strategy call today. We'll discuss your goals and give you a roadmap for digital success.
        </p>
        <a href="https://calendly.com/gus-gusdigitalsolutions/30min" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-lg pulse-glow inline-flex items-center gap-2">
          Start Your Project
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <p class="mt-6 text-sm text-dark-500">Backed by our 100% Satisfaction Guarantee</p>
      </div>
    </section>

  </main>
</Layout>
