---
const experiences = [
  {
    title: 'Account Executive',
    company: 'X (Twitter)',
    description: 'Managed relationships with top-tier advertisers, driving revenue growth and adoption of new ad products during a period of significant platform evolution.',
    tags: ['Enterprise Sales', 'Digital Advertising', 'Account Management'],
  },
  {
    title: 'Growth Lead',
    company: 'Crypto Startup',
    date: '2020 - 2022',
    description: 'Scaled assets under management from $100K to $2.5M. Led investor relations, developed go-to-market strategies, and built community engagement programs.',
    tags: ['Crypto/Web3', 'AUM Growth', 'Investor Relations'],
  },
  {
    title: 'Senior Sales Representative',
    company: 'SaaS Enterprise',
    date: '2015 - 2020',
    description: "Achieved 180% quota attainment and President's Club Rookie of the Year. Generated $350K+ in annual revenue through strategic enterprise sales.",
    tags: ["President's Club", '180% Quota', 'SaaS Sales'],
  },
  {
    title: 'BS Information Sciences & Technology',
    company: 'Penn State University',
    date: 'Graduated',
    description: 'Foundation in technology, systems thinking, and information management that continues to drive strategic decision-making.',
    tags: ['IST', 'Technology'],
  },
];
---

<section class="py-12 bg-gradient-to-br from-dark-900 via-dark-950 to-black relative overflow-hidden">
  <!-- Decorative Orbs -->
  <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary-500/10 blur-[100px] rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/10 blur-[100px] rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="container mx-auto px-4 relative z-10">
    <h3 class="text-2xl font-bold text-primary-400 mb-8 border-b border-primary-500/20 pb-2">Option 2: Glassmorphic Cards</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {experiences.map((exp) => (
        <div class="relative group">
          <!-- Glow Effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-purple-500 rounded-2xl opacity-0 group-hover:opacity-100 blur transition-opacity duration-500"></div>
          
          <div class="relative bg-dark-900/40 backdrop-blur-xl border border-white/10 rounded-2xl p-8 hover:border-white/20 transition-all duration-300 h-full">
            <div class="flex flex-col gap-4">
              <div class="flex justify-between items-start">
                <div>
                  <h4 class="text-xl font-bold text-white mb-1">{exp.title}</h4>
                  <span class="text-primary-400 text-sm tracking-wider uppercase font-semibold">{exp.company}</span>
                </div>
                {exp.date && (
                   <span class="text-xs font-mono text-dark-400">{exp.date}</span>
                )}
              </div>
              
              <p class="text-dark-300 leading-relaxed text-sm">
                {exp.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mt-auto pt-4">
                {exp.tags.map(tag => (
                  <span class="px-2 py-1 text-[10px] uppercase tracking-wider font-bold rounded bg-white/5 text-white/70 border border-white/5">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
