---

<footer class="relative bg-dark-950 border-t border-white/5 pt-0 pb-6 md:pb-12 overflow-hidden">
  <!-- Dynamic Atmospheric Underlay -->
  <div class="absolute inset-x-0 top-0 h-96 bg-gradient-to-b from-primary-900/10 to-transparent pointer-events-none"></div>
  
  <div class="container relative z-10 max-w-[100rem] mx-auto px-4 md:px-6">
    
    <!-- CONSOLIDATED DEPLOYMENT CONSOLE -->
    <div class="glass-card rounded-[2.5rem] md:rounded-[4rem] border border-white/10 bg-white/[0.02] backdrop-blur-3xl overflow-hidden shadow-2xl reveal">
      <div class="p-6 md:p-14">
        
        <div class="grid lg:grid-cols-12 gap-10 md:gap-16 items-start">
          
          <!-- BRAND CORE & SOCIAL -->
          <div class="lg:col-span-4 flex flex-col items-center lg:items-start text-center lg:text-left">
            <a href="/" class="group block mb-6 md:mb-10">
              <h2 class="text-2xl md:text-3xl lg:text-4xl uppercase tracking-tighter whitespace-nowrap flex items-center justify-center lg:justify-start gap-1">
                <span class="font-normal text-white/80">Gus</span>
                <span class="font-bold text-white">Digital</span>
                <span class="font-black text-primary-500 drop-shadow-[0_0_10px_rgba(59,130,246,0.3)]">Solutions</span>
              </h2>
            </a>

            <!-- SOCIAL CLUSTER UNDER LOGO -->
            <div class="flex items-center justify-center lg:justify-start gap-3 flex-wrap">
               {socialLinks.map(social => (
                 <a 
                   href={social.url} 
                   target="_blank" 
                   rel="noopener noreferrer" 
                   class="group/sicon relative w-8 h-8 md:w-10 md:h-10 rounded-lg bg-white/5 border border-white/5 flex items-center justify-center text-dark-400 hover:text-white hover:border-primary-500/40 transition-all duration-300 shadow-lg"
                   aria-label={social.name}
                 >
                   <svg class="w-3.5 h-3.5 md:w-4 md:h-4 transition-transform group-hover/sicon:scale-110" fill="currentColor" viewBox="0 0 24 24">
                     <path d={social.path} />
                   </svg>
                 </a>
               ))}
            </div>
          </div>

          <!-- NAVIGATION MATRIX (COMBINED WITH LEGAL) -->
          <div class="lg:col-span-4 w-full">
            <div class="flex flex-col items-center">
               <nav class="grid grid-cols-2 sm:grid-cols-3 gap-x-6 gap-y-6 w-full max-w-md lg:max-w-none">
                  {navigationLinks.map(link => (
                    <a 
                      href={getLinkHref(link.href)} 
                      class:list={[
                        "text-[9px] md:text-[10px] font-black uppercase tracking-[0.2em] md:tracking-[0.3em] transition-all hover:text-white relative group/fnav py-2 text-center lg:text-left",
                        link.highlight ? "text-primary-400" : "text-dark-500"
                      ]}
                    >
                      <span class="relative z-10">{link.label}</span>
                      <span class="absolute -bottom-1 left-1/2 lg:left-0 -translate-x-1/2 lg:translate-x-0 w-0 h-px bg-primary-500 transition-all group-hover/fnav:w-1/2"></span>
                    </a>
                  ))}
               </nav>
            </div>
          </div>

          <!-- CONTACT DETAILS & COPYRIGHT -->
          <div class="lg:col-span-4 flex flex-col items-center lg:items-end text-center lg:text-right">
             <div class="space-y-6 md:space-y-8 w-full">
                <div class="space-y-3">
                   <a href="mailto:gus@gusdigitalsolutions.com" class="block text-base md:text-lg lg:text-xl font-black text-white hover:text-primary-400 transition-colors tracking-tight break-all md:break-normal">gus@gusdigitalsolutions.com</a>
                   <a href="tel:+15707107790" class="block text-xs md:text-sm font-bold text-dark-400 hover:text-white transition-colors tracking-[0.2em] opacity-60">(570) 710-7790</a>
                </div>
                
                <div class="pt-4 md:pt-6 border-t border-white/5 inline-block lg:ml-auto">
                   <p class="text-[10px] md:text-[11px] font-mono text-dark-400 uppercase tracking-[0.3em] md:tracking-[0.4em] opacity-40">
                     &copy; {currentYear} <span class="text-white/60 font-black">Gus Digital Solutions</span>
                   </p>
                </div>
             </div>
          </div>

        </div>

      </div>
    </div>
  </div>
</footer>

<style>
  .glass-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.4), rgba(15, 23, 42, 0.2));
