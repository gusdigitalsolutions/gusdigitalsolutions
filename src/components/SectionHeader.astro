---
interface Props {
  subtitle?: string;
  title: string;
  titleAccent?: string;
  description?: string;
  className?: string;
  align?: 'left' | 'center';
  delay?: number;
}

const { 
  subtitle, 
  title, 
  titleAccent, 
  description, 
  className = '', 
  align = 'center',
  delay = 0 
} = Astro.props;

const alignClasses = align === 'center' ? 'text-center mx-auto' : 'text-left';
---

<div class:list={["max-w-[90rem] space-y-4 mb-8 md:mb-12 reveal overflow-visible", alignClasses, className]} style={`transition-delay: ${delay}ms`}>
  {subtitle && (
    <p class="text-subtitle">{subtitle}</p>
  )}
  
  <h2 class="text-title text-4xl md:text-7xl lg:text-8xl xl:text-9xl text-white font-black tracking-tighter leading-[0.9] flex flex-wrap justify-center items-baseline gap-x-[0.1em] overflow-visible">
    <span>{title}</span>{titleAccent && <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 via-cyan-400 to-blue-500">{titleAccent}</span>}
  </h2>
  
  {description && (
    <>
      <div class="h-1 w-24 bg-gradient-to-r from-primary-500 to-transparent mb-8" class:list={[align === 'center' ? 'mx-auto' : '']}></div>
      <p class="text-dark-300 text-lg md:text-xl leading-relaxed opacity-70 max-w-2xl" class:list={[align === 'center' ? 'mx-auto' : '']}>
        {description}
      </p>
    </>
  )}
</div>
